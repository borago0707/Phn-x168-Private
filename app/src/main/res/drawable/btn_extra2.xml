    <item android:state_hovered="true">
        <shape android:shape="rectangle">         <!--按钮形状-->
            <corners android:radius="15dp" />
            <solid android:color="@color/color4" /><!--按钮背景填充色-->
            <stroke
                android:width="3dp"
                android:color="@color/color1"/>
        </shape>
    </item>


    <item android:state_enabled="false">
        <shape android:shape="rectangle">         <!--按钮形状-->
            <corners android:radius="15dp" />
            <solid android:color="@color/color8" /><!--按钮背景填充色-->
            <stroke
                android:width="3dp"
                android:color="@color/color1"/>
        </shape>
    </item>



</selector>
